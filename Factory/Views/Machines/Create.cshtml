@{
  Layout = "_Layout";
}
@model Factory.Models.Machine

<div class="viewContainer">
  <h4>Add a new machine</h4>

  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)

    @Html.LabelFor(model => model.Description)
    @Html.TextBoxFor(model => model.Description)

    @Html.LabelFor(model => model.YearLastServiced)
    @Html.TextBoxFor(model => model.YearLastServiced)

    @Html.LabelFor(model => model.Operational)
    @Html.CheckBoxFor(model => model.Operational)

    <button><input type="submit" value="Add new machine" class="btn btn-default" /></button>
  }
</div>